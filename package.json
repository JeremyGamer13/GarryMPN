{
    "name": "garrympn",
    "version": "1.0.0",
    "description": "Make simple Player Model & NPC Garry's Mod addon structures with an MDL model and VTF textures.",
    "license": "MIT",
    "author": "JeremyGamer13",
    "type": "commonjs",
    "main": "index.js",
    "scripts": {
        "gui": "electron gui/app.js",
        "gui:dev": "nodemon",
        "clibuild": "node build-cli"
    },
    "dependencies": {
        "canvas": "^3.1.2"
    },
    "pkg": {
        "scripts": [
            "cli/index.js"
        ],
        "assets": [
            "node_modules/canvas/build/Release/canvas.node",
            "node_modules/canvas/build/**/*"
        ],
        "targets": [
            "node18-win-x64"
        ],
        "outputPath": "./build"
    },
    "devDependencies": {
        "electron": "^37.2.0",
        "nodemon": "^3.1.10",
        "pkg": "^5.8.1"
    }
}
