{
    "appId": "com.jeremygamer13.garrympn",
    "artifactName": "garrympn_${os}_${arch}.${ext}",
    "executableName": "GarryMPN",
    "productName": "GarryMPN",
    "directories": {
        "output": "build"
    },
    "win": {
        "artifactName": "garrympn_${os}_${arch}.${ext}",
        "target": ["zip", "nsis", "msi"]
    },
    "mac": {
        "appId": "com.jeremygamer13.garrympn",
        "category": "public.app-category.developer-tools"
    },
    "msi": {
        "artifactName": "garrympn_setup_${os}_${arch}.${ext}"
    },
    "nsis": {
        "artifactName": "garrympn_setup_${os}_${arch}.${ext}",
        "deleteAppDataOnUninstall": true
    },
    "extraFiles": [
        {
            "from": "build/garrympn-cli.exe",
            "to": "garrympn-cli.exe"
        },
        {
            "from": "LICENSE",
            "to": "LICENSE.garrympn.txt"
        },
        {
            "from": "README.gui.md",
            "to": "README.txt"
        },
        {
            "from": "README.gui.md",
            "to": "README.md"
        }
    ],
    "files": [
        {
            "from": "gui",
            "to": ".",
            "filter": [
                "**/*"
            ]
        },
        "!cli/*",
        "!build/*",
        "!src/*",
        "!temp/*",
        "!cache/*",
        "!.dev/*"
    ]
}